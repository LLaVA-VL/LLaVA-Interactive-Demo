    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Content Moderation - Screen Text",
            "type": "python",
            "request": "launch",
            "module": "azure_content_moderator",
            "justMyCode": true,
            "args": [
                "screen_text",
                "--text_file_path",
                "azure_content_moderator/text_files/email01.txt",
            ],
        },
        {
            "name": "Python: Content Moderation - Screen Image",
            "type": "python",
            "request": "launch",
            "module": "azure_content_moderator",
            "justMyCode": true,
            "args": [
                "screen_image",
                "--image_url",
                "https://moderatorsampleimages.blob.core.windows.net/samples/sample2.jpg",
            ],
        },
        {
            "name": "Python: Content Safety - Analyze Text",
            "type": "python",
            "request": "launch",
            "module": "azure_content_safety",
            "justMyCode": true,
            "args": [
                "analyze_text",
                "--input_text",
                // There is some VS Code debugger auto escaping issue that doesn't allow special characters such as ?
                // See: https://github.com/microsoft/vscode/issues/98471, https://github.com/microsoft/vscode-python/issues/13264
                "\"Is this text Safe\""
            ],
        },
        {
            "name": "Python: Content Safety - Analyze Image",
            "type": "python",
            "request": "launch",
            "module": "azure_content_safety",
            "justMyCode": true,
            "args": [
                "analyze_image",
                "--image_url",
                "https://raw.githubusercontent.com/Azure/azure-sdk-for-python/main/sdk/contentsafety/azure-ai-contentsafety/samples/sample_data/image.jpg"
            ],
        }
    ]
}
