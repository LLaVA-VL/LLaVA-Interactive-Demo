{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: args_tester",
            "type": "python",
            "request": "launch",
            "module": "args_test",
            "justMyCode": true,
            "args": [
                "--moderate",
                "input_text_AICs",
                // "input_openai",
                "oUTput_text_guardlist",
                "output_text_aics",
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
            },
        },
        {
            "name": "Python: llava_interactive",
            "type": "python",
            "request": "launch",
            "module": "llava_interactive",
            "justMyCode": true,
            "args": [
                "--moderate",
                "input_text_guardlist",
                "input_text_aics",
                "input_image_aics",
                // "input_openai",
                "output_text_guardlist",
                "output_text_aics",
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "LLAVA_INTERACTIVE_HOME": ".",
                "LOGLEVEL": "DEBUG",
            },
        },
        {
            "name": "Python: Guardlist",
            "type": "python",
            "request": "launch",
            "module": "guardlist",
            "justMyCode": true,
            "args": [
                "analyze_text",
                "--input_text",
                "\"Is this text safe\"",
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONNET_RUNTIME": "coreclr",
            }
        },
        {
            "name": "Python: Content Moderation - Screen Text",
            "type": "python",
            "request": "launch",
            "module": "azure_content_moderator",
            "justMyCode": true,
            "args": [
                "screen_text",
                "--text_file_path",
                "azure_content_moderator/text_files/email01.txt",
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Content Moderation - Screen Image",
            "type": "python",
            "request": "launch",
            "module": "azure_content_moderator",
            "justMyCode": true,
            "args": [
                "screen_image",
                "--image_url",
                "https://moderatorsampleimages.blob.core.windows.net/samples/sample2.jpg",
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Content Safety - Analyze Text",
            "type": "python",
            "request": "launch",
            "module": "azure_content_safety",
            "justMyCode": true,
            "args": [
                "analyze_text",
                "--input_text",
                // There is some VS Code debugger auto escaping issue that doesn't allow special characters such as ?
                // See: https://github.com/microsoft/vscode/issues/98471, https://github.com/microsoft/vscode-python/issues/13264
                "\"Is this text Safe\""
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Content Safety - Analyze Image",
            "type": "python",
            "request": "launch",
            "module": "azure_content_safety",
            "justMyCode": true,
            "args": [
                "analyze_image",
                "--image_url",
                "https://raw.githubusercontent.com/Azure/azure-sdk-for-python/main/sdk/contentsafety/azure-ai-contentsafety/samples/sample_data/image.jpg"
            ],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
